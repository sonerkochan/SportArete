@model AddOrderViewModel

@{
    ViewBag.Title = "Make an order";
}


<p class="topProducts" style="top: 43px;">@ViewBag.Title</p>

<div class="white-box">
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="@Model.FullName" class="form-label">Fullname</label>
                <input asp-for="@Model.FullName" class="form-control" aria-required="true" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Phone" class="form-label">Phone</label>
                <input asp-for="@Model.Phone" class="form-control" aria-required="true" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address" class="form-label">Delivery Address</label>
                <input asp-for="@Model.Address" class="form-control" value="" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PostalCode" class="form-label">Postal Code</label>
                <input asp-for="@Model.PostalCode" class="form-control" value="" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Order" />
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}