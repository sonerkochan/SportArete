@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="videoSpace">
    <video class="video1" autoplay loop muted>
        <source src="../wwwroot/SportArete (online-video-cutter.com) (1).mp4" type="video/mp4">
        <source src="~/SportArete (online-video-cutter.com) (1).mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <p class="topProducts">TOP PRODUCTS</p>
</div>

<div class="d-flex justify-content-center">
    @foreach (var product in Model)
    {
        <div class="container page-wrapper">
            <div class="page-inner">
                <div class="row">
                    <div class="el-wrapper">
                        <div class="box-up">
                            <img class="img" src="@product.ImageData" alt="Product Image">
                            <div class="img-info">
                                <div class="info-inner">
                                    <span class="p-name">@product.Brand @product.Model</span>
                                </div>
                                @if (product.Category == "Clothing")
                                {
                                    <div class="a-size">Available sizes : <span class="size">S , M , L , XL</span></div>
                                }
                                @if (product.Category == "Shoes")
                                {
                                    <div class="a-size">Available sizes : <span class="size">36 , 37 , 38 , 43</span></div>
                                }
                            </div>
                        </div>

                        <div class="box-down">
                            <div class="h-bg">
                                <div class="h-bg-inner"></div>
                            </div>

                            <a class="cart" asp-area="" asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                                <span class="price">@product.Price BGN</span>
                                <span class="add-to-cart">
                                    <span class="txt">View</span>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
